
<%= form_with(model: task, local: true) do |f| %>

 <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
 
  <%= f.label :status, 'スタッツ' %>
  <%= f.text_field :status %>
 
 
  <%= f.label :title, 'タイトル' %>
  <%= f.text_field :title %>
 
  <%= f.label :content, 'メッセージ' %>
  <%= f.text_field :content %>

  <%= f.submit '投稿' %>
<% end %>

<%= link_to '一覧に戻る', tasks_path %>



